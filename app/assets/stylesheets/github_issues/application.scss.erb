a#new_github_issue_link {
  display: block;
  position: fixed;
  top: 30%;
  left: 0;
  height: 141px;
  width: 49px;
  text-indent: -10000px;
  background: image_url("github_issues/btn_new_issue.png") no-repeat;
}

.github_issues_dialog_ind_msg {
  background: image_url('github_issues/ind_small.gif') no-repeat right 40%; 
  line-height: 34px;
  text-align: right; 
  padding: 0 25px 8px 0; 
  font-size: 110%; 
  margin-right: 20px;
  font-style: italic; 
  color: #999;
}

a.dark_github_issue_link {
  background-position: 0 -141px !important;
}

#new_github_issue_form {
  .github_issue_field {
    padding: 4px;
    border: 1px solid #ccc;
    width: 98%;
  }

  textarea {
    font-size: 12px !important;
    height: 223px;
  }
}
